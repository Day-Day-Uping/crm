    <select id="queryLossCustomer" resultType="com.xxxx.crm.vo.Customer">
        SELECT
        *
        FROM
        t_customer c
        WHERE c.`is_valid` = 1
        AND c.`state` = 0
        AND DATE_ADD(c.`create_date`, INTERVAL 6 MONTH) &lt; NOW()
        AND c.`id` NOT IN
        (SELECT
        o.`cus_id`
        FROM
        t_customer_order o
        WHERE o.`is_valid` = 1
        AND o.`state`
        AND DATE_ADD(o.`order_date`, INTERVAL 6 MONTH)  &gt; NOW()
        )
    </select>
    <select id="queryCusContributionByparams" resultType="java.util.Map"
            parameterType="com.xxxx.crm.query.CustomerQuery">
        select c.name, sum(d.sum) as total
        from t_customer c
        left join t_customer_order o
        on c.id = o.cus_id
        left join t_order_details d
        on o.id = d.order_id
        <where>
            c.is_valid = 1
            and c.state = 0
            and o.is_valid = 1
            and o.state = 1
            <if test="null!=name and name!=''">
                and c.name like concat ('%',#{name},'%')
            </if>
            <if test="null!=time">
                and o.order_date &gt;= #{time}
            </if>
        </where>
        group by c.name
        <if test="null!=type">
            <if test="type==1">
                having total &lt;=1000
            </if>
            <if test="type==2">
                having total &gt;1000 and total &lt;=3000
            </if>
            <if test="type==3">
                having total &gt;3000 and total &lt;=5000
            </if>
            <if test="type==4">
                having total &gt;5000
            </if>
        </if>
        order by total desc
    </select>
    <select id="countCusMake" resultType="java.util.Map">
